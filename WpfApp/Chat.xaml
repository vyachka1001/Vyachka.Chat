<Window x:Class="ClientWPF.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="Chat" Height="689" Width="580" Background="Gray" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="Chat_textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="518" Width="486" FontSize="16" Background="White" IsReadOnly="True" Margin="33,10,0,0"/>
        <Button x:Name="Send_btn" Content="Send" HorizontalAlignment="Center" Margin="0,620,0,0" VerticalAlignment="Top" Width="66" FontSize="16" Height="25" Click="Send_btn_Click"/>
        <TextBox x:Name="Message_textBox" HorizontalAlignment="Left" Margin="33,553,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="486" Height="53" FontSize="16" VerticalScrollBarVisibility="Visible" KeyDown="Message_textBox_KeyDown"/>
        <Label Content="Type here:" HorizontalAlignment="Center" Margin="0,522,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="Reconnect_btn" Content="Reconnect" HorizontalAlignment="Left" Margin="65,620,0,0" VerticalAlignment="Top" Height="25" Width="80" FontSize="16" Click="Reconnect_btn_Click" IsEnabled="False"/>
    </Grid>
</Window>
